{
    "servers": {
        "example": {
            "path"        : "/the/absolute/path/to/the/server/root",
            "launch"      : "java -server -Xincgc -Xmx1G -jar CraftBukkit.jar",
            "timeout"     : 60,
            "log-size"    : 20,
            "log-path"    : "/the/absolute/path/to/the/server/root/logs",
            "backup-max"  : 50,
            "backup-path" : "/the/absolute/path/to/the/server/root/backup",
            "backup-paths": ["plugins", "world", "world_nether"],
            "packages": [
                "CraftBukkit", "CraftIRC",    "dynmap",
                "LWC",         "LogBlock",    "Minequery",
                "NoCheat",     "Permissions", "PermissionsEx",
                "Spout",       "WorldEdit",   "WorldGuard"
            ]
        }
    },
    
