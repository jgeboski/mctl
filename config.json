{
    "servers": {
        "example": {
            "path"   : "/absolute/path/to/server/root",
            "launch" : "java -server -Xincgc -Xmx1G -jar CraftBukkit.jar",
            "timeout": 60,
            
            "packages": [
                "CraftBukkit", "CraftIRC",    "dynmap",
                "LWC",         "LogBlock",    "Minequery",
                "NoCheat",     "Permissions", "PermissionsEx",
                "Spout",       "WorldEdit",   "WorldGuard"
            ],
            
            "archives": {
                "log": {
                    "path"        : "/absolute/path/to/server/root/logs",
                    "max-size"    : 20,
                    "max-archives": 0,
                    "paths"       : ["server.log"]
                },
                
                "backup": {
                    "path"        : "/absolute/path/to/server/root/backup",
                    "max-size"    : 0,
                    "max-archives": 30,
                    "paths"       : ["plugins", "world", "world_nether"]
                }
            }
        }
    },
    
    "packages": {
        "CraftBukkit": {
            "path"   : null,
            "type"   : "jar",
            "url"    : "http://ci.bukkit.org/job/dev-CraftBukkit/",
            "updater": "jenkins",
            "extract": []
        },
        
        "CraftIRC": {
            "path"   : "plugins",
            "type"   : "jar",
            "url"    : "http://ensifera.com:8080/job/CraftIRC%203/",
            "updater": "jenkins",
            "extract": []
        },
        
        "dynmap": {
            "path"   : "plugins",
            "type"   : "jar",
            "url"    : "http://webbukkit.org:8080/job/dynmap/",
            "updater": "jenkins",
            "extract": []
        },
        
        "LWC": {
            "path"   : "plugins",
            "type"   : "jar",
            "url"    : "http://ci.griefcraft.com/job/LWC/",
            "updater": "jenkins",
            "extract": []
        },
        
        "LogBlock": {
            "path"   : "plugins",
            "type"   : "jar",
            "url"    : "http://diddiz.insane-architects.net:8080/job/LogBlock/",
            "updater": "jenkins",
            "extract": []
        },
        
        "Minequery": {
            "path"   : "plugins",
            "type"   : "zip",
            "url"    : "http://dev.bukkit.org/server-mods/minequery/",
            "updater": "bukkitdev",
            "extract": ["Minequery.jar"]
        },
        
        "NoCheat": {
            "path"   : "plugins",
            "type"   : "jar",
            "url"    : "http://dev.bukkit.org/server-mods/nocheat/",
